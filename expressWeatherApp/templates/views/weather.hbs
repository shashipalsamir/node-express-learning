<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weather Application</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    {{>navbar}}


      <!-- Body Content Start -->
      <div class="weather-page mt-5">
            <div class="container">
                <form class="form-inline temp_form">
                    <div class="form-group mb-2 mr-2">
                        <input type="text" class="form-control" id="cityName" placeholder="Enter your city name">
                    </div>
                    <button type="submit" id="submitBtn" class="btn btn-primary mb-2">Search</button>
                </form>
                <br><br>
                <div class="tempInformation">
                    <div class="top-layer">
                        <div id="day"></div>
                        <div id="today_date"></div>
                    </div>
                    <div class="main-layer">
                        <div id="cityOutput">City Name</div>
                        <div class="middle-layer data_hide">
                            <div id="temp">
                                <span>0</span> 
                                <sup>o</sup>C
                            </div>
                            <div id="temp_status">
                                Clouds
                            </div>
                        </div>
                    </div>
                </div>
            </div>
      </div>
      <!-- Body Content End -->
    
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>
    <script src="js/custom.js"></script>

    <script>
        const getCurrentDay = () => {
            let weekday = new Array(7);
            weekday[0] = "Sunday";
            weekday[1] = "Monday";
            weekday[2] = "Tuesday";
            weekday[3] = "Wednesday";
            weekday[4] = "Thursday";
            weekday[5] = "Friday";
            weekday[6] = "Saturday";

            let currentTime = new Date();
            days = weekday[currentTime.getDay()];
            let day = document.getElementById('day');
            day.innerText = days;
        }

        const getCurrentMonth = () => {
            var months = [
                "JAN",
                "FEB",
                "MAR",
                "APR",
                "MAY",
                "JUN",
                "JUL",
                "AUG",
                "SEP",
                "OCT",
                "NOV",
                "DEC",
            ];

            var now = new Date();
            var month = months[now.getMonth()];
            var day = now.getDate();
            let date = day + " " + month;

            today_date = document.getElementById('today_date');
            today_date.innerText = date
        }

        getCurrentDay();
        getCurrentMonth();
    </script>
</body>
</html>